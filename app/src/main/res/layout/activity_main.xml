<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switchUseless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="3"
        android:scaleY="3"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buttonSelf"
        app:layout_constraintEnd_toEndOf="@+id/buttonSelf"
        app:layout_constraintStart_toStartOf="@+id/buttonSelf"
        app:layout_constraintTop_toBottomOf="@+id/switchUseless"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Self Destruct"
        app:layout_constraintBottom_toTopOf="@+id/buttonBusy"
        app:layout_constraintEnd_toEndOf="@+id/buttonBusy"
        app:layout_constraintStart_toStartOf="@+id/buttonBusy"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <Button
        android:id="@+id/buttonBusy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Look Busy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelf" />
</androidx.constraintlayout.widget.ConstraintLayout>